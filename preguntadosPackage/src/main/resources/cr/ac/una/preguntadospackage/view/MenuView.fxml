            <MFXButton fx:id="btnSobreNosotros" onAction="#onActionSobreNosotros" prefHeight="75.0" prefWidth="300.0" styleClass="mfx-button" text="SOBRE NOSTROS" />
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="106.0" prefWidth="1305.0" VBox.vgrow="ALWAYS">
         <children>
            <MFXButton fx:id="btnInformacion" contentDisplay="TOP" onAction="#onActionInformacion" text="INFO">
               <graphic>
                  <ImageView fitHeight="54.0" fitWidth="59.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/Pregunta%20icon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MFXButton>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
