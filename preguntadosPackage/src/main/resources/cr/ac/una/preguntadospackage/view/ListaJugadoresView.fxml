<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="720.0" prefWidth="1280.0" spacing="10.0" styleClass="root" stylesheets="@GeneralCSS.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cr.ac.una.preguntadospackage.controller.ListaJugadoresController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
   </padding>
   <Label alignment="CENTER" prefHeight="60.0" prefWidth="1301.0" styleClass="mfx-label-tittle"
          text="RANKED DE JUGADORES" VBox.vgrow="ALWAYS"/>
   <HBox prefHeight="674.0" prefWidth="1280.0" spacing="25.0" VBox.vgrow="ALWAYS">
      <VBox alignment="TOP_CENTER" prefHeight="619.0" prefWidth="332.0" spacing="30.0"
            styleClass="translucent-brown-vbox">
         <Label styleClass="mfx-label" text="PARAMETROS DEL JUGADOR">
            <VBox.margin>
               <Insets bottom="25.0"/>
            </VBox.margin>
         </Label>
         <MFXTextField fx:id="txtId" floatMode="ABOVE" prefHeight="50.0" prefWidth="375.0"
                       promptText="ID DEL USUARIO">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXTextField fx:id="txtNombre" floatMode="ABOVE" prefHeight="50.0" prefWidth="375.0"
                       promptText="NOMBRE DEL USUARIO">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXTextField fx:id="txtPartidasJugadas" floatMode="ABOVE" prefHeight="50.0" prefWidth="375.0"
                       promptText="PARTIDAS JUGADAS">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXTextField fx:id="txtPartidasGanadas" floatMode="ABOVE" prefHeight="50.0" prefWidth="375.0"
                       promptText="PARTIDAS GANADAS">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXTextField fx:id="txtPreguntasRespondidas" floatMode="ABOVE" layoutX="30.0" layoutY="133.0"
                       prefHeight="50.0" prefWidth="375.0" promptText="PREGUNTAS RESPONDIDAS">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXTextField fx:id="txtPreguntasAcertadas" floatMode="ABOVE" layoutX="30.0" layoutY="133.0"
                       prefHeight="50.0" prefWidth="375.0" promptText="PREGUNTAS ACERTADAS">
            <styleClass>
               <String fx:value="mfx-textfield"/>
               <String fx:value="mfx-label"/>
            </styleClass>
         </MFXTextField>
         <MFXButton fx:id="btnFiltrar" onAction="#onActionFiltrar" prefHeight="75.0" prefWidth="200.0"
                    styleClass="mfx-button" text="FILTRAR"/>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="5.0" right="5.0" top="5.0"/>
         </padding>
         <TableView fx:id="tbvJugadores" onMousePressed="#onMousePressedTbvJugadores" prefHeight="499.0"
                    prefWidth="893.0" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="tbcId" maxWidth="1.7976931348623157E308" prefWidth="125.0" text="ID "/>
               <TableColumn fx:id="tbcNombre" maxWidth="1.7976931348623157E308" prefWidth="200.0" text="NOMBRE"/>
               <TableColumn fx:id="tbcPartidasJugadas" maxWidth="1.7976931348623157E308" prefWidth="200.0"
                            text="PARTIDAS JUGADAS"/>
               <TableColumn fx:id="tbcPartidasGanadas" maxWidth="1.7976931348623157E308" prefWidth="200.0"
                            text="PARTIDAS GANADAS"/>
               <TableColumn fx:id="tbcPreguntasRespondidas" maxWidth="1.7976931348623157E308" prefWidth="200.0"
                            text="PREGUNTAS RESPONDIDAS"/>
               <TableColumn fx:id="tbcPreguntasAcertadas" maxWidth="1.7976931348623157E308" prefWidth="200.0"
                            text="PREGUNTAS ACERTADAS"/>
            </columns>
         </TableView>
         <HBox prefHeight="75.0" prefWidth="883.0" VBox.vgrow="ALWAYS">
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <MFXButton fx:id="btnVolver" onAction="#onAcionVolver" prefHeight="75.0" prefWidth="200.0"
                          styleClass="mfx-button" text="VOLVER"/>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
               <MFXButton fx:id="btnAceptar11" onAction="#onAcionAceptar" prefHeight="75.0"
                          prefWidth="200.0" styleClass="mfx-button" text="ACEPTAR"/>
            </VBox>
         </HBox>
      </VBox>
   </HBox>
</VBox>
